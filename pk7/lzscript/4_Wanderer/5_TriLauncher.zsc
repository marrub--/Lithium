class Lith_TriLauncher : Lith_WWeapon;

default {
   Lith_Weapon.SpawnType "Lith_RocketLauncherPickup";
   Lith_Weapon.MagSize 3;
   Tag "$LITH_INFO_SHORT_TriLauncher";
   Weapon.SlotNumber 5;
   Weapon.SlotPriority 1;

   -Lith_Weapon.HitScan
}

states(Weapon) {
Ready:
   TNT1 A 1 lith_a_ready(WRF_ALLOWRELOAD);
   loop;

Deselect:
   TNT1 A 1 Lith_A_Lower(_raise_instant);
   wait;
Select:
   TNT1 A 1 Lith_A_Raise(_raise_instant);
   wait;

Fire:
   TNT1 A 1;
   goto ReadySelector;
}

