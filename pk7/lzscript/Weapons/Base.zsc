class Lith_Weapon : Weapon;

default {
   Inventory.PickupMessage "";
   Inventory.PickupSound "";
   Lith_Weapon.AdsInSound "weapons/adsin";
   Lith_Weapon.AdsOutSound "weapons/adsout";
   Lith_Weapon.AdsZoom 1.0;
   Lith_Weapon.DefaultSpeed 1.0;
   Lith_Weapon.SprintSpeed 2.0;
   Weapon.BobSpeed 1.5;
   Weapon.BobStyle "InverseSmooth";
   +Inventory.UnTossable
   +Weapon.NoAlert
}

enum Lith_PSprite {
   _psp_weapon = psp_weapon,
   _psp_double_lg,
   _psp_double_rg,
   _psp_weapon_user,
   _psp_weapon_max = _psp_weapon_user + 100,

   _psp_flash = psp_flash,
   _psp_double_lf,
   _psp_double_rf,
   _psp_flash_user,
   _psp_flash_max = _psp_flash_user + 100,

   _psp_misc = 69420,
   _psp_misc_user,
   _psp_misc_max = _psp_misc_user + 100,
}

enum Lith_Hand {
   _rhs,
   _lhs,
}

enum Lith_Oscillate {
   _no_oscill,
   _oscillate,
}

enum Lith_TracerType {
   _tr_normal,
   _tr_slow,
   _tr_big,
   _tr_none
}

enum Lith_RaiseSpeed {
   _raise_slow,
   _raise_normal,
   _raise_fast,
   _raise_instant
}

