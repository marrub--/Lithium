enum Lith_Ads {
   _ads_none,
   _ads_scope,
   _ads_sights,
}

meta sound m_adsOutSnd;
meta sound m_adsInSnd;
meta double m_adsZoom;
meta double m_defaultSpeed;
meta double m_sprintSpeed;
meta class<Actor> m_spawnType;
meta class<Lith_Ammo> m_ammoType;

bool m_side;
